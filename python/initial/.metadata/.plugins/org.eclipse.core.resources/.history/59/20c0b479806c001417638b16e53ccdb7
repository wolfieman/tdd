class Primes(object):
    
    def is_prime(self):
        """Return True if *number* is prime."""
        for element in range(number):
            if number % element == 0:
                return False
    
        return True
    
    def print_next_prime(self, number):
        """Print the closest prime number larger than *number*."""
        index = number
        while True:
            index += 1
            if is_prime(index):
                print(index)